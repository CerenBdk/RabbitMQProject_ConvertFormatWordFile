@{
    ViewData["Title"] = "WordToPdfPage";
}

@model RabbitMQProject_ConvertFormatWordFile.Publisher.Models.WordFile

<h3>Convert File Word to Pdf</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="WordToPdfPage" asp-controller="Convert" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" asp-for="File" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Convert" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.result != null)
{
    <div class="row">
        <div class="alert alert-primary" role="alert">
            @ViewBag.result
        </div>
    </div>
}